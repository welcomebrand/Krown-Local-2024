{% doc %}
  @prompt
    A simple text row that renders out the content from a metaobject called blacksmith_brand
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blacksmith-text-row-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-blacksmith-text-row__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blacksmith-text-row__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
    font-weight: {{ block.settings.font_weight }};
  }

  .ai-blacksmith-text-row__content-{{ ai_gen_id }} h1,
  .ai-blacksmith-text-row__content-{{ ai_gen_id }} h2,
  .ai-blacksmith-text-row__content-{{ ai_gen_id }} h3,
  .ai-blacksmith-text-row__content-{{ ai_gen_id }} h4,
  .ai-blacksmith-text-row__content-{{ ai_gen_id }} h5,
  .ai-blacksmith-text-row__content-{{ ai_gen_id }} h6 {
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
  }

  .ai-blacksmith-text-row__content-{{ ai_gen_id }} p {
    margin: 0 0 16px;
  }

  .ai-blacksmith-text-row__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-blacksmith-text-row__empty-state-{{ ai_gen_id }} {
    color: #999;
    font-style: italic;
    padding: 40px 20px;
    text-align: center;
  }

  @media screen and (max-width: 749px) {
    .ai-blacksmith-text-row-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-blacksmith-text-row__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-blacksmith-text-row-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-blacksmith-text-row__container-{{ ai_gen_id }}">
    {% if block.settings.blacksmith_brand_metaobject %}
      {% assign metaobject = metaobjects[block.settings.blacksmith_brand_metaobject] %}
      
      {% if block.settings.content_field and metaobject[block.settings.content_field] %}
        <div class="ai-blacksmith-text-row__content-{{ ai_gen_id }}">
          {{ metaobject[block.settings.content_field] }}
        </div>
      {% elsif block.settings.fallback_content != blank %}
        <div class="ai-blacksmith-text-row__content-{{ ai_gen_id }}">
          {{ block.settings.fallback_content }}
        </div>
      {% else %}
        <div class="ai-blacksmith-text-row__empty-state-{{ ai_gen_id }}">
          Next, select a blacksmith brand metaobject and content field
        </div>
      {% endif %}
    {% elsif block.settings.fallback_content != blank %}
      <div class="ai-blacksmith-text-row__content-{{ ai_gen_id }}">
        {{ block.settings.fallback_content }}
      </div>
    {% else %}
      <div class="ai-blacksmith-text-row__empty-state-{{ ai_gen_id }}">
        Next, select a blacksmith brand metaobject and content field
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Blacksmith brand text",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "metaobject",
      "id": "blacksmith_brand_metaobject",
      "label": "Blacksmith brand",
      "metaobject_type": "blacksmith_brand"
    },
    {
      "type": "text",
      "id": "content_field",
      "label": "Content field name",
      "default": "description"
    },
    {
      "type": "richtext",
      "id": "fallback_content",
      "label": "Fallback content",
      "default": "<p>Add your blacksmith brand content here</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Maximum width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "default": 800
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "line_height",
      "label": "Line height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "default": 1.5
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "bold",
          "label": "Bold"
        }
      ],
      "default": "normal"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#252324"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#252324"
    }
  ],
  "presets": [
    {
      "name": "Blacksmith brand text"
    }
  ]
}
{% endschema %}